<div class="container">
  <div class="row">
    <body>
      <h1 class="text-center mb-2 text-white bg-primary">Prototype Scheduler</h1>      
      <div class="col-8 mt-3">
        <%
=begin%>
 <h4 class="text-center">Turorial</h4> 
<%
=end%>
        <div class="container">
          <div id="carouselIndicators" class="carousel slide border border-primary border-3" data-wrap=true data-ride="carousel">
            <!-- インジケーター部分 -->
            <ol class="carousel-indicators text-dark bg-primary">
              <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselIndicators" data-slide-to="1"></li>
              <li data-target="#carouselIndicators" data-slide-to="2"></li>
              <li data-target="#carouselIndicators" data-slide-to="3"></li>
              <li data-target="#carouselIndicators" data-slide-to="4"></li>
              <li data-target="#carouselIndicators" data-slide-to="5"></li>
            </ol>
            <!-- カルーセル部分 -->
            <div class="carousel-inner">
              <!-- First slide -->
              <div class="carousel-item active">
                <img class="d-block w-100" alt="First slide" src="<%= asset_path "slide1.png" %>">
              </div>
              <!-- Second slide -->
              <div class="carousel-item">
                <img class="d-block w-100" alt="Second slide" src="<%= asset_path "slide2.png" %>">
              </div>
              <!-- Third slide -->
              <div class="carousel-item">
                <img class="d-block w-100" alt="Third slide" src="<%= asset_path "slide3.png" %>">
              </div>
              <!-- Forth slide -->
              <div class="carousel-item">
                <img class="d-block w-100" alt="Forth slide" src="<%= asset_path "slide4.png" %>">
              </div>
              <!-- Fifth slide -->
              <div class="carousel-item">
                <img class="d-block w-100" alt="Fifth slide" src="<%= asset_path "slide5.png" %>">
              </div>
              <!-- Sixth slide -->
              <div class="carousel-item">
                <img class="d-block w-100" alt="Sixth slide" src="<%= asset_path "slide6.png" %>">
              </div>
            </div>
          </div>
        </div>
      </div>
    </body>
    <div class="col-4 mt-3">
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "guestlogin btn btn-success btn-lg mx-auto" %>
      <div class="row offset-1">
        <h3 class="mt-3"><%= t('.sign_up') %></h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mt-1 mx-auto">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="col small text-muted">
            *メールの受信確認はありません
          </div>

          <div class="field mt-3">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control-sm border-1", size: 19 %>
          </div>

          <div class="field mt-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field mt-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-3">
            <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
