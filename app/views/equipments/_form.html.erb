<%= form_with(model: @equipment, local: true ,url: equipment_choose_new_or_edit ) do |f| %>
  <% if @equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= @equipment.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @equipment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="equipment_name">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="equipment_comment">
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>
  <%= f.submit %>
<% end %>