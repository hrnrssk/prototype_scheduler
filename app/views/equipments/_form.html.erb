<%= form_with(model: @equipment, local: true ,url: equipment_choose_new_or_edit ) do |f| %>
  <% if @equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= @equipment.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @equipment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row mt-1">
    <%= f.submit "情報更新", class: "btn btn-primary" %>
  </div>
  <div class="container">
    <div class="row mt-4">
      <div class="col-2 offset-4">
        <%= f.label :装置名 %>
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2 offset-4">
        <%= f.label :コメント %>
      </div>
      <div class="col-2">
        <%= f.text_field :comment %>
      </div>
    </div>
  </div>
<% end %>