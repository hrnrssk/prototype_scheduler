<%= form_with(model: @user, local: true ,url: user_choose_new_or_edit ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 
  <div class="row mt-3">
    <div class="col-4 offset-4">
      <table class="table table-borderless">
        <tr class="table-info text-center">
          <th>担当工程名（装置）</th>
        </tr>
        <%= f.fields_for :workings do |w| %>
        <tr>
          <td>
            <div class="working_name row text-center">
              <%= w.collection_select :processing_id, Processing.all, :id, :name, :prompt => "工程を選択" %>
            </div>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-1">
    <%= f.submit "情報更新", class: "btn btn-primary" %>
  </div>
<% end %>