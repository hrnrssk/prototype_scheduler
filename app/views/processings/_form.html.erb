<%= form_with(model: @processing, local: true ,url: processing_choose_new_or_edit ) do |f| %>
  <% if @processing.errors.any? %>
    <div id="error_explanation">
      <h2><%= @processing.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @processing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row mt-4">
      <div class="col-2 offset-4">
        <%= f.label :工程名 %>
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2 offset-4">
        <%= f.label :装置名 %>
      </div>
      <div class="col-2">
        <%= f.collection_select :equipment_id, Equipment.all, :id, :name, :prompt => "装置を選択" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2 offset-4">
        <%= f.label :所要時間 %>
      </div>
      <div class="col-3">
        <%= f.time_select :time_required %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2 offset-4">
        <%= f.label :コメント %>
      </div>
      <div class="col-2">
        <%= f.text_field :comment %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <%= f.submit "情報更新", class: "btn btn-primary" %>
  </div>
<% end %>