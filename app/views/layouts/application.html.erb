<!DOCTYPE html>
<html>
  <head>
    <title>PrototypeScheduler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "試作品一覧", prototypes_path %>
      <%= link_to "工程一覧", processings_path %>
      <%= link_to "装置一覧", equipments_path %>
      <%= link_to "ユーザー情報", user_path(current_user) %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %><br>
      USER NAME： <%= current_user.name %>
      </div>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>
    
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
